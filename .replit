modules = ["python-3.12", "nodejs-20", "web"]
run = "npm run build"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run build"]

[workflows]
runButton = "Frontend Dev Server"

[[workflows.workflow]]
name = "Frontend Dev Server"
author = 43359296
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm run dev"

[[ports]]
localPort = 3000
externalPort = 80
